{
  "name": "Typescript",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "styled-components.vscode-styled-components",
        "formulahendry.auto-rename-tag"
      ],
      "settings": {
        "editor.formatOnSave": true
      }
    }
  },
  "postCreateCommand": "yarn install",
  "remoteUser": "node"
}
